                        android:cursorVisible="true"
                        android:hint=" Lock Box"

                        android:singleLine="true"
                        android:textSize="@dimen/textsize_fifteen"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                       android:layout_margin="8dp"
                        android:text="Bid Total:"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/forty"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="8dp"
                        android:background="@drawable/login_using_border"
                        android:cursorVisible="true"
                        android:hint=" Bid Total"

                        android:singleLine="true"
                        android:textSize="@dimen/textsize_fifteen"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                       android:layout_margin="8dp"
                        android:text="Request Notes :"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hundred"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="8dp"
                        android:background="@drawable/login_using_border"
                        android:cursorVisible="true"
                        android:hint=" Request Notes"
                        android:lines="4"
                       android:gravity="top"
                        android:textSize="@dimen/textsize_fifteen"></EditText>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
